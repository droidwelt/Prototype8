<resources>
    <!--
    -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/list_background_selector</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:activatedBackgroundIndicator">@drawable/list_background_selector</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogColorButton" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/RedButton</item>
    </style>

    <style name="RedButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/c_red</item>
    </style>

    <style name="AStyle_et" parent="AppTheme">
        <item name="android:textColor">@color/color_input</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:colorBackground">@color/color_input_background</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
    </style>


    <!--  <item name="tabTextAppearance">@style/AStyle_tab</item> -->
    <style name="AStyle_PageTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!--  <item name="android:textSize">36sp</item> -->
    <style name="AStyle_tab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>



</resources>