<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_cltview_OPP_OPER"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="10"
        android:text="opp_oper"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_cltview_OPP_DATE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_weight="10"
        android:text="opp_date" />

    <TextView
        android:id="@+id/text_cltview_OPP_NAME"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="10"
        android:gravity="right"
        android:text="opp_name" />

    <TextView
        android:id="@+id/text_cltview_OPP_SUM"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="10"
        android:gravity="right"
        android:text="opp_sum" />
</LinearLayout>
